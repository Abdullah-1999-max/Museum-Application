<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ticketing.fragments.GenerateTicket">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#2e8b57"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:backgroundTint="@color/white"
                android:layout_marginTop="-35dp"
                android:layout_gravity="center_horizontal"/>


            <TextView
                android:id="@+id/txtuid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="237dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:width="120dip"
                android:fontFamily="serif"
                android:text="Ticket #"
                android:textColor="#FBFAFA"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/txtticket_id"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtticket_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="237dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-10sp"
                android:fontFamily="serif"
                android:width="120dip"
                android:text="ID:"
                android:textColor="#FBFAFA"
                android:textSize="35sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/txtuid"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="serif"
                android:width="120dip"
                android:text="Activity"
                android:textColor="#FBFAFA"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/txtac1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtac1"
                android:layout_width="312dp"
                android:layout_height="48dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-8dp"
                android:width="130dip"
                android:fontFamily="serif"
                android:text="Visit a Smart Museum"
                android:textColor="#FBFAFA"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/txtac"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_20sdp">

                <TextView
                    android:id="@+id/txtd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="10dp"
                    android:width="120dip"
                    android:fontFamily="serif"
                    android:text="Date"
                    android:textColor="#FBFAFA"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/txtd1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/txtd1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="237dp"
                    android:layout_marginLeft="20dp"
                    android:width="120dip"
                    android:fontFamily="serif"
                    android:gravity="end"
                    android:text="Time"
                    android:textColor="#FBFAFA"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/txtd"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginTop="-10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_20sdp">



                <TextView
                    android:id="@+id/txtdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="serif"
                    android:width="160dip"
                    android:text="time"
                    android:textColor="#FBFAFA"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/txttime1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"/>

                <TextView
                    android:id="@+id/txttime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="237dp"
                    android:width="120dip"
                    android:fontFamily="serif"
                    android:gravity="end"
                    android:text="time:"
                    android:textColor="#FBFAFA"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/txtdate"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/txtname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="serif"
                android:width="120dip"
                android:text="Name"
                android:textColor="#FBFAFA"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/txtname1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtname1"
                android:layout_width="312dp"
                android:layout_height="48dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-8dp"
                android:width="130dip"
                android:fontFamily="serif"
                android:text="Joan"
                android:textColor="#FBFAFA"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/txtname"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtCAT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:width="120dip"
                android:fontFamily="serif"
                android:text="CATEGORY"
                android:textColor="#FBFAFA"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/txtaudult"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtaudult"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="180dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-10sp"
                android:width="120dip"
                android:fontFamily="serif"
                android:text="Adult"
                android:textColor="#FBFAFA"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/txtCAT"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtstudent"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginStart="180dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-8sp"
                android:width="120dip"
                android:fontFamily="serif"
                android:text="Student"
                android:textColor="#FBFAFA"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/txtmember"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/txtmember"
                android:layout_width="138dp"
                android:layout_height="42dp"
                android:layout_marginStart="180dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-10sp"
                android:width="120dip"
                android:fontFamily="serif"
                android:text="Member"
                android:textColor="#FBFAFA"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/txtAMOUNT"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/txtAMOUNT"
                android:layout_width="371dp"
                android:layout_height="35dp"
                android:layout_marginStart="180dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20sp"
                android:width="120dip"
                android:fontFamily="serif"
                android:text="Total Amount:"
                android:textColor="#FBFAFA"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/txtamount1"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/txtamount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-10sp"
                android:fontFamily="serif"
                android:width="120dip"
                android:text="ID:"
                android:textColor="#FBFAFA"
                android:textSize="@dimen/_25sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="199dp"
                app:srcCompat="@android:drawable/divider_horizontal_dark" />

            <Button
                android:id="@+id/btnnew"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:width="120dip"
                android:text="Buy New Ticket"
                android:layout_marginBottom="@dimen/_20sdp"
                android:backgroundTint="@color/design_default_color_error"/>



        </LinearLayout>
    </ScrollView>

</RelativeLayout>